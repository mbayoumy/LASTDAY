<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#85C2FF"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:text="This is a questionnaire to be filled out by you. Please select the appropriate button below to  get started."
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/main_user_full_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Large Text"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Welcome"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="60sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/main_start_tour_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="28dp"
        android:background="@drawable/welcome_screen_buttons"
        android:text="Tour Guide" />
    
    

    <Button
        android:id="@+id/main_start_quiz_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignTop="@+id/main_start_tour_button"
        android:background="@drawable/welcome_screen_buttons"
        android:text="Start" />

    <Button
        android:id="@+id/main_start_tutorial"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignBaseline="@+id/main_start_quiz_button"
        android:layout_alignBottom="@+id/main_start_quiz_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welcome_screen_buttons"
        android:text="Tablet Tutorial" />

</RelativeLayout>