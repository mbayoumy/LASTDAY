<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85C2FF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/login_dob_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="What is your Date of Birth?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="32sp" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_dob_tv"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/welcome_screen_buttons"
        android:text="Log in" />

    <TextView
        android:id="@+id/login_first_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_dob_tv"
        android:layout_below="@+id/datepicker"
        android:layout_marginTop="30dp"
        android:text="What is your first name?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/login_first_name_ET"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/login_first_name_TV"
        android:layout_below="@+id/login_first_name_TV"
        android:background="@drawable/round_corners_edittext"
        android:ems="10"
        android:singleLine="true"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/login_surname_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_first_name_ET"
        android:layout_below="@+id/login_first_name_ET"
        android:layout_marginTop="24dp"
        android:text="What is your last name?"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/login_surname_ET"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/login_surname_TV"
        android:layout_below="@+id/login_surname_TV"
       	android:background="@drawable/round_corners_edittext"
        android:ems="10"
        android:textSize="50sp"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

</RelativeLayout>